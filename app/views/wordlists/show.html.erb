<div class = "showwrapper">
  <div class = "list-show">
    <% if @words.length != 0 %>
      <div class = "wordmemory">
        <%= link_to "単語を記憶する", wordlist_words_path(@wordlist.id) , class: "memory" %>
        <%= link_to "単語をランダム記憶する", wordlist_wordsrand_path(@wordlist.id) , class: "memory" %>
      </div>
      <% else %>
      <div class = "no-words">単語を登録しよう！</div>
      <% end %>
      <div class = "list-tr">
    <p class = "show-ex">リストの名前</p>
    <h2 class = "show-listname"><%= @wordlist.listname %></h2>
    <p class = "show-ex">説明</p>
    <p class = "show-listtext"><%= @wordlist.text%></p>
    <p class = "show-nickname">リスト作成者</p>
    <%= link_to @wordlist.user.nickname, user_path(@wordlist.user.id) , class: "show-list-nickname" %>
    <% if user_signed_in? && current_user.id == @wordlist.user_id %>
      <p class = "show-ex">説明</p>
      </div>
      <ul class = "show-btn">
          <%= link_to "リストを他のユーザーと共有する" , new_wordlist_authority_path(@wordlist.id) , class: "authoritybtn" %>
        <li>
          <%= link_to "リストを編集する", edit_wordlist_path(@wordlist.id), class: "editbtn"%>
          <%= link_to "リストを削除する", wordlist_path(@wordlist.id), method: :delete, class: "destroybtn"%>
        </li>
      </ul>
      <div class = "word-regi">
        <%= link_to "単語を登録する", new_wordlist_word_path(@wordlist.id), class: "regi" %>
      </div>
      <% else %>
      </div>
        <% if user_signed_in? && @authority_user != nil && @authority_user.authority_user_code == current_user.user_code %>
          <ul class = "show-btn">
            <li>
              <%= link_to "リストを編集する", edit_wordlist_path(@wordlist.id), class: "editbtn"%>
            </li>
          </ul>
          <div class = "word-regi">
            <%= link_to "単語を登録する", new_wordlist_word_path(@wordlist.id), class: "regi" %>
          </div>
        <% end %>
          <div id = 'favorites_buttons_<%= @wordlist.id %>'>
             <%= render partial: 'favorites/favorite', locals: { wordlist: @wordlist} %>
          </div>
    <% end %>
  </div>

  <div class = "word-show">
    <h1>単語一覧</h1>
      <% if @words %>
          <% @words.each do |word| %>
        <div class = "word-list">
            <p class = "word-name" ><%= word.wordname%></p>
            <p class = "word-mean" ><%= word.mean%></p>
        </div>
        <% end %>
      <% end %>
  </div>
          <%= link_to "トップページに戻る", "/" %>
</div>